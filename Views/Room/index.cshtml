@model IEnumerable<hotelManagementSystem20.models.room>

@{
    ViewBag.Title = "Liste des chambres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of rooms - Hotel Management System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        .container {
            margin: 20px;
            background-color: #d6c6b0;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        body {
            background-color: #c0a58b; /* Light gray background */
            font-family: Arial, sans-serif;
        }

        h2 {
            color: #46331D; /* Dark brown heading */
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
            background-color: #c0a58b;
            border: 1px solid #dee2e6;
        }

            .table th,
            .table td {
                padding: 8px;
                line-height: 1.42857143;
                vertical-align: top;
                border-top: 1px solid #dee2e6;
                background-color: #d9d8d6;
            }

            .table th {
                vertical-align: bottom;
                border-bottom: 2px solid #dee2e6;
                color: #464a4c;
                font-weight: bold;
                background-color: #c0a58b;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .table tr:hover {
                background-color: #e9ecef;
            }

        .action-link a {
            color: #5d4733; /* Blue color for back link */
            text-decoration: underline;
            margin-top: 10px;
            display: inline-block;
        }

        .btn, .btn-default, .btn-danger {
            color: #fff;
            background-color: #5d4733; /* Standard button color */
            border: none;
            border-radius: 5px;
            padding: 8px 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            display: inline-block; /* Ensures buttons are properly aligned */
            width: 70px; /* Uniform width for all buttons */
        }

            .btn-default:hover {
                background-color: #c0a58b; /* Darker gray on hover */
            }

        .btn-danger {
            background-color: #dc3545; /* Red button color */
            color: #fff; /* White text color */
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            margin-left: 5px;
        }

            .btn-danger:hover {
                background-color: #c82333; /* Darker red on hover */
            }
    </style>
</head>
<body>

    <div class="container">
        <h2>List of rooms</h2>

        <p>
            <a href="@Url.Action("Create")" class="btn btn-default">Add a new room</a>
        </p>

        <table class="table">
            <tr>
                <th>Number</th>
                <th>Type</th>
                <th>Phone</th>
                <th>Availability</th>
                <th>Price</th>
                <th></th>
            </tr>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.room_no</td>
                    <td>@room.room_type</td>
                    <td>@room.room_phone</td>
                    <td>@room.availability</td>
                    <td>@room.price</td>

                    <td class="action-links">
                        <a href="@Url.Action("Details", new { id = room.room_id })" class="btn btn-default">Details</a>
                        <a href="@Url.Action("Edit", new { id = room.room_id })" class="btn btn-default">Edit</a>
                        <a href="@Url.Action("Delete", new { id = room.room_id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>

</body>
</html>
