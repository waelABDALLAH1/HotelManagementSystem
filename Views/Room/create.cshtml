@model hotelManagementSystem20.models.room

@{
    ViewBag.Title = "Créer une nouvelle chambre";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add a new room - Hotel Management System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        /* Add style to the input button */
        .form-control {
            /* Your button styles here */
            /* Green */
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
        }

        /* Change the color of the button on hover */


        body {
            background-color: #f8f9fa; /* Light gray background */
            margin: 20px;
            font-family: Arial, sans-serif;
        }

        h2 {
            color: #46331D; /* Dark brown heading */
            margin-bottom: 20px;
        }

        .form-horizontal {
            background-color: #d6c6b0; /* White background for form */
            padding: 20px;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
            border: 1px solid #d6c6b0;
            border-radius: 30px; /* Adjust the border radius as needed */
        }

        .control-label {
            color: #46331D; /* Dark brown text for labels */
        }

        .text-danger {
            color: #dc3545; /* Red color for error messages */
        }

        .btn, .btn-default, .btn-danger {
            color: #fff;
            background-color: #5d4733; /* Standard button color */
            border: none;
            border-radius: 5px;
            padding: 8px 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            display: inline-block; /* Ensures buttons are properly aligned */
            width: 100px; /* Uniform width for all buttons */
        }

            .btn-default:hover {
                background-color: #0056b3; /* Darker blue on hover */
            }

        .btn-back {
            color: #5d4733; /* Blue color for back link */
            text-decoration: none;
            margin-top: 10px;
            display: inline-block;
        }

            .btn-back:hover {
                text-decoration: underline; /* Underline on hover */
            }
    </style>
</head>
<body>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Add a new room</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.room_no, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.room_no, new { htmlAttributes = new { @class = "form-control", required = "required", pattern = "[0-9]+", title = "Between 1 and 300", placeholder = "e.g. 123" } })
                    @Html.ValidationMessageFor(model => model.room_no, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("room_type", "Room type", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.room_type, "Communicante") Communicative

                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.room_type, "Familiale") Family
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.room_type, "Suite") Suite
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.room_type, "Double") Double
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.room_type, "Twin") Twin
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.room_type, "Standard") Standard
                    </label>
                    @Html.ValidationMessageFor(model => model.room_type, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.room_phone, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.room_phone, new { htmlAttributes = new { @class = "form-control", pattern = "7[0-9]{7}", title = "The phone number must start with 7 and have 8 digits.", placeholder = "e.g. 55 555 555", maxlength = "8" } })
                    @Html.ValidationMessageFor(model => model.room_phone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("availability", "Availability", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.availability, "true") Available

                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.availability, "false") Not available

                    </label>
                    @Html.ValidationMessageFor(model => model.availability, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.price, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control", type = "number", min = "10", max = "1000", step = "10", required = "required", placeholder = "e.g. 50.000" } })
                    @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
            <div>
                @Html.ActionLink("Retour à la liste", "Index", null, new { @class = "btn-back" })
            </div>
        </div>
    }


</body>
</html>
