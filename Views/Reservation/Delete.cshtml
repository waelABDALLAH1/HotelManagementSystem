@model hotelManagementSystem20.models.Reservation

@{
    ViewBag.Title = "Supprimer la Réservation";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure the correct path to your shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Supprimer la Réservation - Hotel Management System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        .container {
            margin: 20px auto;
            max-width: 400px;
            background-color: #d6c6b0;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        body {
            background-color: #f8f9fa; /* Light gray background */
            font-family: Arial, sans-serif;
        }

        h2 {
            color: #46331D; /* Dark brown heading */
            margin-bottom: 20px;
            margin-top: 0; /* Adjusted */
        }

        h4 {
            color: #464a4c; /* Dark gray text */
            margin-bottom: 10px;
        }

        .btn-default {
            background-color: #5d4733; /* Gray button color */
            color: #fff; /* White text color */
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

            .btn-default:hover {
                background-color: #c0a58b; /* Darker gray on hover */
            }

        .btn-danger {
            background-color: #dc3545; /* Red button color */
            color: #fff; /* White text color */
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            margin-left: 5px;
        }

            .btn-danger:hover {
                background-color: #c82333; /* Darker red on hover */
            }
    </style>
</head>
<body>
    <h2>Delete the Booking</h2>

    <div class="container">
        <h4>Are you sure you want to delete this booking?</h4>
        <h3>Reservation ID: @Model.Reservation_Id, Date of Reservation: @Model.DateReservation</h3>
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            }
        </div>
    </div>
</body>
</html>