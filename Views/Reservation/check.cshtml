@model IEnumerable<hotelManagementSystem20.models.room>

@{
    ViewBag.Title = "Liste des chambres";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        margin: 20px auto;
        max-width: 1200px; /* Adjusted width to match the room listing */
        background-color: #d6c6b0;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow-x: auto; /* Allows horizontal scrolling on smaller devices */
    }

    h2 {
        color: #46331D; /* Dark brown heading */
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #c0a58b;
        border: 1px solid #dee2e6;
    }

        .table th, .table td {
            padding: 8px;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
            background-color: #d9d8d6;
            text-align: center; /* Centers text and content */
        }

        .table th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
            color: #464a4c;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #e9ecef;
        }

    .btn, .btn-default, .btn-danger {
        color: #fff;
        background-color: #5d4733; /* Standard button color */
        border: none;
        border-radius: 5px;
        padding: 8px 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-decoration: none;
        display: inline-block; /* Ensures buttons are properly aligned */
        width: 100px; /* Uniform width for all buttons */
    }

        .btn:hover, .btn-default:hover {
            background-color: #c0a58b; /* Hover color change */
        }

    .btn-danger {
        background-color: #dc3545; /* Red button for delete actions */
    }

        .btn-danger:hover {
            background-color: #c82333; /* Darker red on hover */
        }

    @@media (max-width: 768px) {
        .table, .btn {
            width: 100%;
            font-size: 0.9em; /* Scales down font size on smaller screens */
        }

        .container {
            margin: 10px;
            padding: 10px;
        }

        h2 {
            font-size: 1.2em; /* Adjusts heading size for better readability */
        }
    }
</style>

<h2>List of available rooms</h2>



<table class="table">
    <tr>
        <th>Number</th>
        <th>Type</th>
        <th>Phone</th>
        <th>Availability</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (var room in Model)
    {
        <tr>
            <td>@room.room_no</td>
            <td>@room.room_type</td>
            <td>@room.room_phone</td>
            <td>@room.availability</td>
            <td>@room.price</td>
            <td>

                @Html.ActionLink("Add", "AddRoomToReservation", new { roomId = room.room_id, reservationId = ViewBag.reservationId }, null)


            </td>
        </tr>
    }
</table>

