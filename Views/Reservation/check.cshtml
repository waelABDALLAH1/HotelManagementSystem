@model IEnumerable<hotelManagementSystem20.models.room>

@{
    ViewBag.Title = "Liste des chambres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Rooms - Hotel Management System</title>
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
            margin: 20px;
            font-family: Arial, sans-serif;
        }

        h2 {
            color: #46331D; /* Dark brown heading */
            text-align: center;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: auto;
            background-color: #d6c6b0; /* Light brown background for table */
        }

        th, td {
            border: 1px solid #46331D; /* Dark brown border for better contrast */
            padding: 8px;
            text-align: left;
            color: #333;
        }

        th {
            background-color: #c0a58b; /* Lighter brown for headers */
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd; /* Light grey for hover */
        }

        .btn-link {
            color: #5d4733; /* Button link color */
            text-decoration: none;
            font-weight: bold;
        }

            .btn-link:hover {
                color: #c0a58b; /* Light brown on hover */
            }
    </style>
</head>
<body>
    <h2>List of Rooms Available</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th>Type</th>
                <th>Phone</th>
                <th>Availability</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.room_no</td>
                    <td>@room.room_type</td>
                    <td>@room.room_phone</td>
                    <td>@room.availability</td>
                    <td>@room.price</td>
                    <td>
                        @Html.ActionLink("Add", "Add", new { roomId = room.room_id, reservationId = ViewBag.reservationId }, new { @class = "btn-link" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
