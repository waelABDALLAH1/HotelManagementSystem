@model hotelManagementSystem20.models.client

@{
    ViewBag.Title = "Supprimer le client";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Specify the path to your shared layout
}

<h2>Supprimer le client</h2>

<div>
    <h4>Êtes-vous sûr de vouloir supprimer ce client ?</h4>
    <h3>@Model.last_name, @Model.first_name</h3>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            @Html.ActionLink("Annuler", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>
