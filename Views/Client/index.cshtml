@model IEnumerable<hotelManagementSystem20.models.client>

@{
    ViewBag.Title = "Liste des clients";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Liste des clients</h2>

<p>
    @Html.ActionLink("Créer un nouveau client", "Create")
</p>

<table class="table">
    <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Téléphone</th>
        <th>Adresse</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.last_name</td>
            <td>@item.first_name</td>
            <td>@item.phone_no</td>
            <td>@item.address</td>
            <td>
                @Html.ActionLink("Détails", "Details", new { id = item.client_id }) |
                @Html.ActionLink("Modifier", "Edit", new { id = item.client_id }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.client_id })
            </td>
        </tr>
    }
</table>
