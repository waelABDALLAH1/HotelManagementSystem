@model hotelManagementSystem20.models.client

@{
    ViewBag.Title = "Modifier le client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit client - Hotel Management System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        .container {
            margin: 20px auto;
            max-width: 400px;
            background-color: #d6c6b0;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        body {
            background-color: #f8f9fa; /* Light gray background */
            font-family: Arial, sans-serif;
        }

        h2 {
            color: #46331D; /* Dark brown heading */
            margin-bottom: 20px;
            margin-top: 0; /* Adjusted */
        }

        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            color: #464a4c; /* Dark gray label color */
        }

        .form-control {
            border: 1px solid #ced4da; /* Light gray border */
            border-radius: 5px;
            padding: 8px;
            width: 100%;
            box-sizing: border-box;
        }

        .btn, .btn-default, .btn-danger {
            color: #fff;
            background-color: #5d4733; /* Standard button color */
            border: none;
            border-radius: 5px;
            padding: 8px 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            display: inline-block; /* Ensures buttons are properly aligned */
            width: 100px; /* Uniform width for all buttons */
        }

            .btn-default:hover {
                background-color: #c0a58b; /* Darker gray on hover */
            }


            .btn-primary:hover {
                background-color: #9a7a43; /* Darker blue on hover */
            }
    </style>
</head>
<body>

    <div class="container">
        <h2>Edit client</h2>

        @using (Html.BeginForm("Edit", "Client", FormMethod.Post, new { id = "editForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="control-label" for="first_name">First Name</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.first_name, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "20", pattern = "[A-Za-z]+", placeholder = "e.g. John" } })
                    @Html.ValidationMessageFor(model => model.first_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="last_name">Last Name</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "20", pattern = "[A-Za-z]+", placeholder = "e.g. Doe" } })
                    @Html.ValidationMessageFor(model => model.last_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="phone_no">Phone Number</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.phone_no, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "8", placeholder = "e.g. 55 555 555", pattern = "[5-9][0-9]{7}", title = "The phone number must start with a number between 5 and 9 and must have 8 digits." } })
                    @Html.ValidationMessageFor(model => model.phone_no, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="address">Address</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "100", autocomplete = "address-line1", placeholder = "e.g. 22 New York Street", pattern = "[a-zA-Z0-9 .,-]+" } })
                    @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>

</body>
</html>
